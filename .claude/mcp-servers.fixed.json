{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "/Users/wushaobing911/Desktop/douyin"]
    },
    "grep": {
      "command": "npx",
      "args": ["-y", "grep-mcp"]
    },
    "duckduckgo": {
      "command": "npx",
      "args": ["-y", "duckduckgo-mcp-server"]
    },
    "sqlite": {
      "command": "npx",
      "args": ["-y", "mcp-sqlite-tools"]
    },
    "postgres": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-postgres"],
      "env": {
        "DATABASE_URL": "${POSTGRES_URL}"
      }
    },
    "browser": {
      "command": "npx",
      "args": ["-y", "playwright-mcp"]
    },
    "puppeteer": {
      "command": "npx",
      "args": ["-y", "puppeteer-mcp-server"],
      "env": {}
    },
    "github": {
      "command": "npx",
      "args": ["-y", "github-mcp-custom", "stdio"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      }
    },
    "stripe": {
      "command": "npx",
      "args": ["-y", "@stripe/mcp", "--tools=all"],
      "env": {
        "STRIPE_SECRET_KEY": "${STRIPE_SECRET_KEY}"
      }
    },
    "figma": {
      "command": "npx",
      "args": ["-y", "figma-mcp"],
      "env": {
        "FIGMA_ACCESS_TOKEN": "${FIGMA_TOKEN}"
      }
    },
    "ollama-local": {
      "command": "npx",
      "args": ["-y", "github:patruff/ollama-mcp-bridge"]
    },
    "semgrep": {
      "command": "npx",
      "args": ["-y", "mcp-server-semgrep"]
    },
    "semantic-scholar": {
      "command": "npx",
      "args": ["-y", "researchmcp"],
      "env": {
        "SEMANTIC_SCHOLAR_API_KEY": "${SEMANTIC_SCHOLAR_API_KEY}"
      }
    },
    "vercel-weather": {
      "command": "npx",
      "args": ["-y", "@iflow-mcp/weather-mcp"]
    },
    "databutton": {
      "command": "npx",
      "args": ["-y", "@iflow-mcp/databutton-mcp"]
    }
  }
}
